# Username and password check
# break statement - loop terminates when break is executed inside the loop.

defuser = "umutcan3398"
defpassword = "3398"

while (True):
    user = input("User name:")
    password = input("Password:")
    if((user == defuser) and (password == defpassword)):
        print("Welcome",user)
        break
    elif((user != defuser) and (password == defpassword)):
        print("You entered your username incorrectly")
    elif((user == defuser) and (password != defpassword)):
        print("You forgot your password")
        print("Would you like to change your password?(U/C)")
        answer = input()
        if(answer == "U"):

            newpassword ==input("New password:")
            print("Please wait")
            defpassword = newpassword
            print("Password changed successfully")
        else::
        print("Try again")

